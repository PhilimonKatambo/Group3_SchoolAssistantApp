<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="92dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class Schedule and Time Table"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView android:text="Day" android:padding="10dp"/>
            <TextView android:text="Time" android:padding="10dp"/>
            <TextView android:text="Subject" android:padding="10dp"/>
        </TableRow>

        <TableRow>
            <TextView android:text="06/06/2025"  android:padding="10dp"/>
            <TextView android:text="07:00AM"  android:padding="10dp"/>
            <TextView android:text="Open Source" android:padding="10dp"/>

        </TableRow>

        <TableRow>
            <TextView android:text="07/06/2025"  android:padding="10dp"/>
            <TextView android:text="09:00AM"  android:padding="10dp"/>
            <TextView android:text="Multmedia" android:padding="10dp"/>

        </TableRow>

        <TableRow>
        <TextView android:text="08/06/2025"  android:padding="10dp"/>
        <TextView android:text="12:00PM"  android:padding="10dp"/>
        <TextView android:text="Research" android:padding="10dp"/>

    </TableRow>

    </TableLayout>


</LinearLayout>